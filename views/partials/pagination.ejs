<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center" style="color: black;">
        
        <!-- <% if(page > 1) {%> -->
            <%if(page==2){%>
                <li class="page-item">
                    <a class="page-link bg-primary text-light" href="/" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            <%}else{%>
                <li class="page-item">
                    <a class="page-link bg-primary text-light" href="/articles/page/<%=page - 1%>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            <%}%>
        <!-- <%}%> -->
        <% for (let i = 1; i < articles.count/4; i++) {%>
            <li class="page-item"><a class="page-link bg-primary text-light" href="/articles/page/<%=i%>"><%=i%></a></li>
        <%}%>

        <%if(hasNext==true){%>
            <li class="page-item">
                <a class="page-link bg-primary text-light" href="/articles/page/<%=page + 1%>" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        <%}%>
        <%if(page)%>
    </ul>
</nav>